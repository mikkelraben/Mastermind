<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mastermind">

    <Style TargetType="local:SelectColor" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SelectColor">
                    <Button Width="32" Height="32" >
                        <Button.Flyout>
                            <Flyout x:Name="btnFlyout">
                                <StackPanel Orientation="Horizontal">
                                    
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
