<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mastermind">

    <Style TargetType="local:CodeButton" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:CodeButton">
                    <Button Background="{TemplateBinding RestColor}">
                        <ResourceDictionary>
                            <Setter x:Key="ButtonBackgroundPointerOver" Value="{TemplateBinding HoverColor}"/>
                            <Setter x:Key="ButtonBackgroundPressed" Value="{TemplateBinding PressedColor}"/>
                        </ResourceDictionary>
                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:ColorButton" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ColorButton">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
